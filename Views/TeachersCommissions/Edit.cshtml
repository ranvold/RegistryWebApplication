@model RegistryWebApplication.Models.TeachersCommission

@{
    ViewData["Title"] = "TeacherCommission edits";
}

<h1>Edit</h1>

<h4>TeachersCommission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommissionId" class="control-label"></label>
                <select asp-for="CommissionId" class="form-control" asp-items="ViewBag.CommissionId"></select>
                <span asp-validation-for="CommissionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefenseDate" class="control-label"></label>
                <input asp-for="DefenseDate" class="form-control" />
                <span asp-validation-for="DefenseDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="col offset-1 row">
                    <div class="col">
                        <input type="submit" value="Edit" class="btn btn-info w-75" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
