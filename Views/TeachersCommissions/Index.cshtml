@model IEnumerable<RegistryWebApplication.Models.TeachersCommission>


<h1>Teachers and Commissions</h1>

<p>
     <a asp-action="Create" class="btn btn-primary">Add new</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DefenseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th>
                Changes
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DefenseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Commission.HeadLastName)
                    @Html.DisplayFor(modelItem => item.Commission.HeadFirstName)
                    @Html.DisplayFor(modelItem => item.Commission.HeadFathersName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.LastName)
                    @Html.DisplayFor(modelItem => item.Teacher.FirstName)
                    @Html.DisplayFor(modelItem => item.Teacher.FathersName)
                </td>
                <td style="width:20%">
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
