@model IEnumerable<RegistryWebApplication.Models.Commission>

@{
    ViewData["Title"] = "Commissions";
}

<h1>Commissions</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add new</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeadLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadFathersName)
            </th>
            <th>
                Changes
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HeadLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeadFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeadFathersName)
                </td>
                <td style="width:15%">
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
